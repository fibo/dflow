<html>
<head>
  <meta charset="utf-8">

  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title><%= @pkg.name + ' | ' + @document.title %></title>

  <!-- Bootstrap -->
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="<%= @bootstrap.cdn %>/css/bootstrap.min.css">

  <!-- Optional theme -->
  <link rel="stylesheet" href="<%= @bootstrap.cdn %>/css/bootstrap-theme.min.css">
</head>
<body style>
  <div class="navbar navbar-default navbar-fixed-top navbar-inverse" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <a href=<% if @document.isIndex: %>"./"<% else: %>"../"<% end %> class="navbar-brand"><%= @pkg.name %></a>
      </div>

      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li <% if @document.title is 'api': %>class="active"<% end %>><a href="./api.html">api</a></li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <li><a href="https://github.com/fibo/<%= @pkg.name %>">repo</a></li>

          <li><a href="http://g14n.info">about me</a></li>
        </ul>
      </div>
    </div> <!-- div class="container" -->
  </div> <!-- div class="navbar" -->

  <div class="container">
    <div style="height: 50px;"></div>
    <%- @content %>
  </div>

  <%- @getBlock('scripts').toHTML() %>

  <script type="text/javascript"> <!-- Start of Google Analytics tracking code -->

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-12635045-12']);
    _gaq.push(['_trackPageview']);

   (function() {
     var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
     ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
     var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
   })();

  </script> <!-- End of Google Analytics tracking code -->
</body>
</html>
